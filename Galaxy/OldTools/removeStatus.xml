<tool id="remove_status" name="Remove Status" version="1.0.0">
  <description>tool</description>

  <command interpreter="python">
      removeStatus_w.py -i $input1 -o $output_file -s $s
  </command>

  <inputs>
      <param name="input1" type="data" format="tgz" />
      <param name="s" type="text" label="Stati to remove (comma ',' separated)" value="MCOT,LS" />
  </inputs>

  <outputs>
    <data format="tgz"  name="out_file1" />
  </outputs>

  <help>
      removeStatus tool
  </help>
</tool>
